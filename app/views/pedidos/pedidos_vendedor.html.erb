<% @page_title = "Mis Pedidos" %>

 <!-- Table -->

            <div class="row-fluid">

              <div class="span12">

                <div class="widget">

                <div class="widget-head">
                  <div class="pull-left">Mostrando <%= @pedidos.count %> de <%= @pedidos.total_count %> registros
                  <br/> <span class="icon-download-alt" >     </span> <%= link_to "Excel", pedidos_path(format: "xls") %>   <%= paginate @pedidos if @pedidos %>  </div>
                  <div class="widget-icons pull-right">
                  

                    <form method="get" action="#" class="form-inline uni pull-right">
                    <input type="text" placeholder="Ingresa un pedido a buscar" value="" name="q">
                    <button class="btn btn-primary" type="submit">Buscar</button>
                  </form>


                  </div>  
                 
                  <div class="clearfix"></div>
                </div>

                  <div class="widget-content">

                    <table class="table table-striped table-bordered table-hover">
                      <thead>
                        <tr>
                            <th>ID Pedido</th>
                        <th>Producto</th>
                        <th>Cantidad</th>
                        <th>Fecha pedido</th>
                        <th>Estado</th>
                        <th>&nbsp;</th>
                        </tr>
                      </thead>
                      <tbody>

                         <% if (@pedidos.count == 0) %>
                            <tr>
                                    <td class="textcenter" colspan="7">Actualmente no hay registro de pedidos.</td>
                                </tr>
                                <%else %>

                          
                          <% @pedidos.each do |pedido| %>
                        <tr>
                            <td><%= link_to pedido.id, pedido %></td>
                          <td><%= link_to pedido.producto.nombre, producto_path(pedido.producto_id)  %></td>
                         <td><%= pedido.cantidad %></td>
                            <td><%=l pedido.created_at, :format =>:long %></td>
                          <td><span class="label label-active"><%= pedido.confirmado %></span></td>
                       <td><a class="btn btn-success btn-small" href="<%= pedido_vendedor_path(current_vendedor,pedido) %>">Ver detalle</a></td>
                        
                      
                        </tr>
                        <%end %>
                          <%end %>                                                            
                      </tbody>
                    </table>


                  </div>
                </div>




              </div>

            </div>












