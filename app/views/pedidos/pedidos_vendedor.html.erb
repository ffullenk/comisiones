</form>

<form class="pull-right" action="/billing/clientarea.php" method="post">
  <fieldset>
    <input type="hidden" value="domains" name="action"> 
    <select onchange="submit()" name="itemlimit">
      <option>Resultados por página</option>
      <option selected="selected" value="10">10</option>
      <option value="25">25</option>
      <option value="50">50</option>
      <option value="100">100</option>
      <option value="all">Todos</option>
    </select>
  </fieldset>
</form>

<div class="pagination">
  <ul>
    <li class="disabled"><a href="javascript:return false;">← Pág. Previa</a></li>
    <li class="disabled"><a href="javascript:return false;">  Pág. Siguiente→</a></li>
  </ul>
</div>


<script type="text/javascript">
  $(function() {
    $('.domids').change(function() {
      if($('.domids').filter( ":checked" ).length &gt; 0) {
        $('#bulkmanagementactions').fadeIn();
      } else {
        $('#bulkmanagementactions').fadeOut();
      }
    });
  });
</script>


