<div class="page-header">
  <h1>Mis Pedidos <small>Estos son todos los pedidos que has realizado.</small></h1>
</div>

<form method="post" action="#" class="form-inline well well-small pull-right">
  <input type="hidden" value="products" name="action">
  <input type="text" placeholder="Ingresa un pedido a buscar" value="" name="q" class="span3">
  <button class="btn btn-success" type="submit">Filtrar</button>
</form>

<div style="padding-top:9px"><%= @pedidos.count %> Pedido(s) Encontrado(s), Página 1 de 1</div>

<form class="clearfix" action="#" method="post">
  <input type="hidden" value="bulkdomain" name="action">
  <table class="table table-bordered-outside table-striped table-sorted">
    <thead>
      <tr>
        <th class="sort-asc"><a title="Domain" href="clientarea.php?action=domains&amp;orderby=domain">ID Pedido</a></th>
        <th><a  href="#">Producto</a></th>
        <th><a  href="#">Cantidad</a></th>
        <th><a  href="#">Fecha pedido</a></th>
        <th><a  href="#">Estado</a></th>
        <th>&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      <% @pedidos.each do |pedido| %>
      <tr>
        
        <td><a target="_blank" href="#"> <%= pedido.id %>/a></td>
        <td><%= link_to pedido.producto.nombre, producto_path(pedido.producto_id)  %></td>
        <td><%= pedido.cantidad %></td>
        <td><%=l pedido.created_at, :format =>:long %></td>

        <td><span class="label label-active"><%= pedido.confirmado %></span></td>
        <td><a class="btn" href="<%= pedido_vendedor_path(current_vendedor,pedido) %>">Ver detalle</a></td>
      </tr>
       <% end %>
    </tbody>
