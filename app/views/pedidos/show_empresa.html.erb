<%- model_class = Pedido -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:producto_id) %>:</strong></dt>
  <dd><%= link_to @producto.nombre, producto_empresa_path(@producto.id) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:vendedor_id) %>:</strong></dt>
  <dd><%= @vendedor.nombre %></dd>
 
  <dt><strong><%= model_class.human_attribute_name(:cantidad) %>:</strong></dt>
  <dd><%= @pedido.cantidad %></dd>
  <dt><strong><%= model_class.human_attribute_name(:confirmado) %>:</strong></dt>
  <dd><%= @pedido.confirmado %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              pedidos_empresa_path, :class => 'btn'  %>



<%if !@pedido.confirmado %>
   <%= link_to "Confirmar",
              confirmar_pedido_empresa_path(current_empresa.id,@producto.id,@pedido.id),
              :method => 'post',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'EstÃ¡ seguro?')) },
              :class => 'btn' %>             
<%end%>
</div>
