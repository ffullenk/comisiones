<%= simple_form_for :contacto, :url => contacto_path, :html=>{:class=>"form-horizontal"}  do |f| %>
  <div class="form-inputs">
    <%= f.input :nombre, :autofocus => true,:label=>"Nombre" %>
    <%= f.input :email, :required => false,:label=>"Email" %>
    <%= f.input :mensaje, as: :text,:label=>"Mensaje" , :input_html => { :cols => 50, :rows => 3 } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Enviar", :class=>"btn btn-primary" %>
  </div>
<%end%>
