<%- model_class = Producto -%>
<div class="page-header">
  <h2>
    <%=@producto.nombre %></h2>
</div>

<dl class="dl-horizontal">
  <dt> <strong><%= model_class.human_attribute_name(:nombre) %>:</strong>
  </dt>
  <dd>
    <%= @producto.nombre %></dd>
  <dt> <strong><%= model_class.human_attribute_name(:precio) %>:</strong>
  </dt>
  <dd>
    <%= @producto.precio %></dd>
  <dt>
    <strong>Empresa:</strong>
  </dt>
  <dd>
    <%= @producto.empresa.nombre %></dd>
  <dt>
    <strong>
      <%= model_class.human_attribute_name(:descripcion) if @producto.descripcion  %>:</strong>
  </dt>
  <dd>
    <%= @producto.descripcion if @producto.descripcion  %></dd>
</dl>

<div class="form-actions">
