<%= simple_form_for(@producto, :html => {:class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
     <%= f.input :nombre ,:label=>"Nombre Producto"%>
     <%= f.input :precio %>
     <%= f.input :avatar, :label => 'Foto' %>
     <%= f.input :descripcion %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class=>"btn btn-primary" ,:label=>"Enviar"%>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                productos_path, :class => 'btn' %>
  </div>
<% end %>
