<% @page_title = "Mis Comisiones" %>

 <!-- Table -->

            <div class="row-fluid">

              <div class="span12">

                <div class="widget">

                <div class="widget-head">
                  <div class="pull-left">Mostrando <%= @pedidos.count %> de <%= @pedidos.total_count %> registros
                  <br/> <span class="icon-download-alt" >     </span> <%= link_to "Excel", pedidos_path(format: "xls") %>   <%= paginate @pedidos if @pedidos %>  </div>
                  <div class="widget-icons pull-right">
                  

                    <form method="get" action="#" class="form-inline uni pull-right">
                    <input type="text" placeholder="Ingresa un pedido a buscar" value="" name="q">
                    <button class="btn btn-primary" type="submit">Buscar</button>
                  </form>


                  </div>  
                 
                  <div class="clearfix"></div>
                </div>

                  <div class="widget-content">

                    <table class="table table-striped table-bordered table-hover">
                      <thead>
                        <tr>
                              <th>
        Pedido</th>

      <th>
        Cantidad</th>

       <th>
        Comision</th>
      <th>
        Precio Producto</th>
      <th>
        Fecha</th>
      <th>
        Producto</th>
      <th>
        Ganancia</th>
                        </tr>
                      </thead>
                      <tbody>

                         <% if (@pedidos.count == 0) %>
                            <tr>
                                    <td class="textcenter" colspan="7">Actualmente no hay registro de pedidos.</td>
                                </tr>
                                <%else %>

                          
                       <% @pedidos.each do |pedido| %>
    <tr>
      <td>
        <%= link_to pedido.id, pedido_vendedor_path(current_vendedor.id,pedido.id) %></td>
      <td>
        <%= pedido.cantidad  %></td>

      <td>
        <%= pedido.producto.comision %>%</td>

        <td>
        <%= pedido.producto.precio %></td>
      <td>
        <%=l pedido.created_at, :format =>:long %></td>
      <td>
        <%= pedido.producto.nombre %></td>

       <td>
        <%= (pedido.producto.precio.to_i*(pedido.producto.comision.to_i)) %></td>
      
    </tr>
    <% end %>
                        
                      
                     
                          <%end %>                                                            
                      </tbody>
                    </table>


                  </div>
                </div>




              </div>

            </div>













