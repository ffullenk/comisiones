<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, :required => true, :autofocus => true %>
    <%= f.input :rut, :required => true ,:disabled => true%>
    <%= f.input :representante, :required => true, :label=>"Representante legal" %>
    <%= f.input :direccion, :required => true, :label=> "Dirección" %>
    <%= f.input :telefono, :required => true, :label=> "Teléfono" %>
    <%= f.association :comuna , collection: Comuna.all(order: 'nombre'), :label => 'Comuna', :include_blank => false, :label_method => :nombre %>
    <%= f.input :url, :label=>"Sitio Web", :autofocus => true %>

    <%= f.input :password, :autocomplete => "off", :hint => "deje en blanco si no desea cambiar", :required => false %>
    <%= f.input :password_confirmation, :required => false %>
    <%= f.input :current_password, :hint => "necesitamos su password actual para confirmar", :required => true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %>.</p>

<%= link_to "Back", :back %>
