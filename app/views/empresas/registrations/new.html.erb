<h2>Registro nueva Empresa</h2>

<%= simple_form_for(resource,:html => {:class => 'form-horizontal' }, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	<%= f.input :nombre, :label=>"Nombre Empresa",:required => true, :autofocus => true %>
    <%= f.input :rut, :required => true ,:hint => "Ej. 12.345.678-9"%>
    <%= f.input :representante, :required => true, :label=>"Representante legal" %>
    <%= f.input :direccion, :required => true, :label=> "Dirección" %>
    <%= f.input :telefono, :required => true, :label=> "Teléfono" %>
    <%= f.association :comuna , collection: Comuna.all(order: 'nombre'), :label => 'Comuna', :include_blank => false, :label_method => :nombre %>
    
    <%= f.input :url, :label=>"Sitio Web", :autofocus => true %>
    <%= f.input :email, :required => true, :autofocus => true %>
    <%= f.input :password, :required => true %>
    <%= f.input :password_confirmation,:label=>"Confirmar password", :required => true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Enviar", :class=>"btn btn-primary" %>
  </div>
<% end %>

<%= render "empresas/shared/links" %>
